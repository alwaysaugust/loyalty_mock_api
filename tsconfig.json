{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2016"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
